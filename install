#!/bin/sh
#shellcheck disable=all
#
# Usage:
#
#    sh install.sh
#
# Environment variables: VERBOSE, CP, LN, MKDIR, RM, DIRNAME.
#
#    env VERBOSE=1 sh install.sh
#
# DO NOT EDIT THIS FILE
#
# This file is generated by rcm(7) as:
#
#   rcup -g
#
# To update it, re-run the above command.
#
: ${VERBOSE:=0}
: ${CP:=/bin/cp}
: ${LN:=/bin/ln}
: ${MKDIR:=/bin/mkdir}
: ${RM:=/bin/rm}
: ${DIRNAME:=/usr/bin/dirname}
verbose() {
  if [ "$VERBOSE" -gt 0 ]; then
    echo "$@"
  fi
}
handle_file_cp() {
  if [ -e "$2" ]; then
    printf "%s " "overwrite $2? [yN]"
    read overwrite
    case "$overwrite" in
      y)
        $RM -rf "$2"
        ;;
      *)
        echo "skipping $2"
        return
        ;;
    esac
  fi
  verbose "'$1' -> '$2'"
  $MKDIR -p "$($DIRNAME "$2")"
  $CP -R "$1" "$2"
}
handle_file_ln() {
  if [ -e "$2" ]; then
    printf "%s " "overwrite $2? [yN]"
    read overwrite
    case "$overwrite" in
      y)
        $RM -rf "$2"
        ;;
      *)
        echo "skipping $2"
        return
        ;;
    esac
  fi
  verbose "'$1' -> '$2'"
  $MKDIR -p "$($DIRNAME "$2")"
  $LN -sf "$1" "$2"
}
handle_file_ln ""${HOME}"/.dotfiles/host-mba2020.tsmetallic.com/config/homebrew/Brewfile" ""${HOME}"/.config/homebrew/Brewfile"
handle_file_ln ""${HOME}"/.dotfiles/host-mba2020.tsmetallic.com/rcrc" ""${HOME}"/.rcrc"
handle_file_ln ""${HOME}"/.dotfiles/aliases" ""${HOME}"/.aliases"
handle_file_ln ""${HOME}"/.dotfiles/bashrc" ""${HOME}"/.bashrc"
handle_file_ln ""${HOME}"/.dotfiles/config/kitty/current-theme.conf" ""${HOME}"/.config/kitty/current-theme.conf"
handle_file_ln ""${HOME}"/.dotfiles/config/kitty/kitty.conf" ""${HOME}"/.config/kitty/kitty.conf"
handle_file_ln ""${HOME}"/.dotfiles/config/kitty/kitty.conf.bak" ""${HOME}"/.config/kitty/kitty.conf.bak"
handle_file_ln ""${HOME}"/.dotfiles/config/mc/ini" ""${HOME}"/.config/mc/ini"
handle_file_ln ""${HOME}"/.dotfiles/config/mc/mc.ext" ""${HOME}"/.config/mc/mc.ext"
handle_file_ln ""${HOME}"/.dotfiles/config/mc/panels.ini" ""${HOME}"/.config/mc/panels.ini"
handle_file_ln ""${HOME}"/.dotfiles/config/micro/bindings.json" ""${HOME}"/.config/micro/bindings.json"
handle_file_ln ""${HOME}"/.dotfiles/config/micro/settings.json" ""${HOME}"/.config/micro/settings.json"
handle_file_ln ""${HOME}"/.dotfiles/config/neofetch/config.conf" ""${HOME}"/.config/neofetch/config.conf"
handle_file_ln ""${HOME}"/.dotfiles/exports" ""${HOME}"/.exports"
handle_file_ln ""${HOME}"/.dotfiles/functions" ""${HOME}"/.functions"
handle_file_ln ""${HOME}"/.dotfiles/gconf" ""${HOME}"/.gconf"
handle_file_ln ""${HOME}"/.dotfiles/install" ""${HOME}"/.install"
handle_file_ln ""${HOME}"/.dotfiles/paths" ""${HOME}"/.paths"
handle_file_ln ""${HOME}"/.dotfiles/pyvewrc" ""${HOME}"/.pyvewrc"
handle_file_ln ""${HOME}"/.dotfiles/shellcheckrc" ""${HOME}"/.shellcheckrc"
handle_file_ln ""${HOME}"/.dotfiles/themes" ""${HOME}"/.themes"
