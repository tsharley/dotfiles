			PS1='\[\e[32;1m\]'
			;;
		33)
			PS1='\[\e[33;1m\]'
			;;
		34)
			PS1='\[\e[34;1m\]'
			;;
		35)
			PS1='\[\e[35;1m\]'
			;;
		36)
			PS1='\[\e[36;1m\]'
			;;
		37)
			PS1='\[\e[37;1m\]'
			;;
		90)
			PS1='\[\e[90;1m\]'
			;;
		91)
			PS1='\[\e[91;1m\]'
			;;
		92)
			PS1='\[\e[92;1m\]'
			;;
		93)
			PS1='\[\e[93;1m\]'
			;;
		94)
			PS1='\[\e[94;1m\]'
			;;
		95)
			PS1='\[\e[95;1m\]'
			;;
		96)
			PS1='\[\e[96;1m\]'
			;;
		97)
			PS1='\[\e[97;1m\]'
			;;
		maroon)
			PS1='\[\e[38;5;52;1m\]'
			;;
		green)
			PS1='\[\e[38;5;23;1m\]'
			;;
		olive)
			PS1='\[\e[38;5;58;1m\]'
			;;
		navy)
			PS1='\[\e[38;5;17;1m\]'
			;;
		purple)
			PS1='\[\e[38;5;57;1m\]'
			;;
		teal)
			PS1='\[\e[38;5;37;1m\]'
			;;
		silver)
			PS1='\[\e[37;1m\]'
			;;
		gray)
			PS1='\[\e[90;1m\]'
			;;
		red)
			PS1='\[\e[38;5;124;1m\]'
			;;
		lime)
			PS1='\[\e[38;5;40;1m\]'
